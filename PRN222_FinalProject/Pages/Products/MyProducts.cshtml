@page
@model PRN222_FinalProject.Pages.Products.MyProductsModel
@{
    ViewData["Title"] = "Sản phẩm của tôi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-box-seam"></i> Sản phẩm của tôi</h2>
        <a asp-page="/Products/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Đăng sản phẩm mới
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Products != null && Model.Products.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Danh mục</th>
                        <th>Giá</th>
                        <th>Pin</th>
                        <th>Trạng thái</th>
                        <th>Lý do không được duyệt</th>
                        <th>Ngày đăng</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>
                                @{
                                    var firstImage = product.Images?.Split(',').FirstOrDefault() ?? "/images/no-image.png";
                                }
                                <img src="@firstImage" alt="@product.Name" style="width: 60px; height: 60px; object-fit: cover;" class="rounded">
                            </td>
                            <td>@product.Name</td>
                            <td>@product.CategoryName</td>
                            <td>@product.Price.ToString("N0") VND</td>
                            <td>
                                <span class="badge @(product.BatteryHealthPercent >= 80 ? "bg-success" : product.BatteryHealthPercent >= 50 ? "bg-warning" : "bg-danger")">
                                    @product.BatteryHealthPercent%
                                </span>
                            </td>
                            <td>
                                @if (product.ApprovalStatus == "rejected")
                                {
                                    <span class="badge bg-danger" title="@(product.RejectionReason ?? "Không được duyệt")">
                                        Không được duyệt
                                    </span>
                                }
                                else if (product.IsSold == true)
                                {
                                    <span class="badge bg-danger">Đã bán</span>
                                }
                                else if (product.ApprovalStatus == "pending")
                                {
                                    <span class="badge bg-warning">Chờ duyệt</span>
                                }
                                else if (product.IsActive == true)
                                {
                                    <span class="badge bg-success">Đang bán</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Đã ẩn</span>
                                }
                            </td>
                            <td>
                                @if (product.ApprovalStatus == "rejected" && !string.IsNullOrEmpty(product.RejectionReason))
                                {
                                    <span class="text-danger" style="font-size: 0.85em;" title="@product.RejectionReason">
                                        @(product.RejectionReason.Length > 50 ? product.RejectionReason.Substring(0, 50) + "..." : product.RejectionReason)
                                    </span>
                                }
                                else if (product.ApprovalStatus == "rejected")
                                {
                                    <span class="text-muted" style="font-size: 0.85em;">
                                        Không có lý do cụ thể
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted" style="font-size: 0.85em;">-</span>
                                }
                            </td>
                            <td>@product.CreatedAt?.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (!product.IsSold.HasValue || !product.IsSold.Value)
                                {
                                    <div class="btn-group" role="group">
                                        <a asp-page="/Products/Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary" title="Chỉnh sửa" 
                                           disabled="@(product.ApprovalStatus == "rejected" || product.ApprovalStatus == "pending")">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-page="/Products/Details" asp-route-id="@product.Id" class="btn btn-sm btn-outline-info" title="Xem">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (product.IsActive == true && product.ApprovalStatus != "rejected" && product.ApprovalStatus != "pending")
                                        {
                                            <form method="post" asp-page-handler="Deactivate" asp-route-id="@product.Id" style="display:inline;">
                                                <button type="submit" class="btn btn-sm btn-outline-warning" title="Ẩn" onclick="return confirm('Bạn có chắc muốn ẩn sản phẩm này?')">
                                                    <i class="bi bi-eye-slash"></i>
                                                </button>
                                            </form>
                                        }
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@product.Id" style="display:inline;">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?')"
                                                    disabled="@(product.ApprovalStatus == "rejected" || product.ApprovalStatus == "pending")">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">Không thể thao tác</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Bạn chưa có sản phẩm nào. 
            <a asp-page="/Products/Create">Đăng sản phẩm ngay</a>
        </div>
    }
</div>
