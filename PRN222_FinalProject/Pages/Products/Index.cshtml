@page
@model PRN222_FinalProject.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Sản phẩm";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-battery-charging"></i> Danh sách sản phẩm</h2>
        <a asp-page="/Products/Compare" class="btn btn-info">
            <i class="bi bi-arrow-left-right"></i> So sánh (<span id="compareCount">0</span>)
        </a>
    </div>
    
    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <input type="text" name="keyword" class="form-control" placeholder="Tìm kiếm..." value="@Model.SearchDto.Keyword" />
                </div>
                <div class="col-md-2">
                    <select name="categoryId" class="form-select">
                        <option value="">Tất cả danh mục</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id" selected="@(Model.SearchDto.CategoryId == category.Id)">@category.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <input type="number" name="minPrice" class="form-control" placeholder="Giá từ" value="@Model.SearchDto.MinPrice" />
                </div>
                <div class="col-md-2">
                    <input type="number" name="maxPrice" class="form-control" placeholder="Giá đến" value="@Model.SearchDto.MaxPrice" />
                </div>
                <div class="col-md-2">
                    <select name="sortBy" class="form-select">
                        <option value="newest" selected="@(Model.SearchDto.SortBy == "newest")">Mới nhất</option>
                        <option value="price_asc" selected="@(Model.SearchDto.SortBy == "price_asc")">Giá tăng dần</option>
                        <option value="price_desc" selected="@(Model.SearchDto.SortBy == "price_desc")">Giá giảm dần</option>
                    </select>
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-primary w-100"><i class="bi bi-search"></i></button>
                </div>
            </form>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="row">
        @if (Model.Products != null && Model.Products.Any())
        {
            @foreach (var product in Model.Products)
            {
                <div class="col-md-3 mb-4" data-product-id="@product.Id">
                    <div class="card h-100">
                        @{
                            var firstImage = product.Images?.Split(',').FirstOrDefault() ?? "/images/no-image.png";
                        }
                        <img src="@firstImage" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h6 class="card-title">@product.Name</h6>
                            <p class="card-text text-muted small">@product.CategoryName</p>
                            <p class="text-primary fw-bold">@product.Price.ToString("N0") VND</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="bi bi-battery-half"></i> @product.BatteryHealthPercent%
                                </small>
                                <span class="badge bg-info">@product.Condition</span>
                            </div>
                        </div>
                        <div class="card-footer bg-white">
                            <div class="d-grid gap-2">
                                <a asp-page="/Products/Details" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> Xem chi tiết
                                </a>
                                <form method="post" asp-page-handler="AddToCompare" asp-route-productId="@product.Id" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-secondary w-100">
                                        <i class="bi bi-arrow-left-right"></i> So sánh
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Không tìm thấy sản phẩm nào
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.SearchDto.PageNumber == 1 ? "disabled" : "")">
                    <a class="page-link" asp-page="/Products/Index" 
                       asp-route-pageNumber="@(Model.SearchDto.PageNumber - 1)"
                       asp-route-keyword="@Model.SearchDto.Keyword"
                       asp-route-categoryId="@Model.SearchDto.CategoryId"
                       asp-route-minPrice="@Model.SearchDto.MinPrice"
                       asp-route-maxPrice="@Model.SearchDto.MaxPrice"
                       asp-route-sortBy="@Model.SearchDto.SortBy">Trước</a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.SearchDto.PageNumber ? "active" : "")">
                        <a class="page-link" asp-page="/Products/Index" 
                           asp-route-pageNumber="@i"
                           asp-route-keyword="@Model.SearchDto.Keyword"
                           asp-route-categoryId="@Model.SearchDto.CategoryId"
                           asp-route-minPrice="@Model.SearchDto.MinPrice"
                           asp-route-maxPrice="@Model.SearchDto.MaxPrice"
                           asp-route-sortBy="@Model.SearchDto.SortBy">@i</a>
                    </li>
                }

                <li class="page-item @(Model.SearchDto.PageNumber == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-page="/Products/Index" 
                       asp-route-pageNumber="@(Model.SearchDto.PageNumber + 1)"
                       asp-route-keyword="@Model.SearchDto.Keyword"
                       asp-route-categoryId="@Model.SearchDto.CategoryId"
                       asp-route-minPrice="@Model.SearchDto.MinPrice"
                       asp-route-maxPrice="@Model.SearchDto.MaxPrice"
                       asp-route-sortBy="@Model.SearchDto.SortBy">Sau</a>
                </li>
            </ul>
        </nav>
    }
</div>
