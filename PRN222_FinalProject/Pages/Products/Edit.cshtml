@page
@model PRN222_FinalProject.Pages.Products.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0"><i class="bi bi-pencil"></i> Chỉnh sửa sản phẩm</h3>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="UpdateDto.Id" />
                        <input type="hidden" asp-for="UpdateDto.ExistingImages" />

                        <div class="mb-3">
                            <label asp-for="UpdateDto.Name" class="form-label">Tên sản phẩm <span class="text-danger">*</span></label>
                            <input asp-for="UpdateDto.Name" class="form-control" />
                            <span asp-validation-for="UpdateDto.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UpdateDto.CategoryId" class="form-label">Danh mục <span class="text-danger">*</span></label>
                            <select asp-for="UpdateDto.CategoryId" class="form-select">
                                <option value="">-- Chọn danh mục --</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                            <span asp-validation-for="UpdateDto.CategoryId" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="UpdateDto.Price" class="form-label">Giá (VND) <span class="text-danger">*</span></label>
                                <input asp-for="UpdateDto.Price" type="number" class="form-control" />
                                <span asp-validation-for="UpdateDto.Price" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="UpdateDto.Quantity" class="form-label">Số lượng <span class="text-danger">*</span></label>
                                <input asp-for="UpdateDto.Quantity" type="number" min="0" class="form-control" />
                                <span asp-validation-for="UpdateDto.Quantity" class="text-danger"></span>
                                <small class="text-muted">Để 0 nếu hết hàng</small>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="UpdateDto.BatteryHealthPercent" class="form-label">Tình trạng pin (%)</label>
                                <input asp-for="UpdateDto.BatteryHealthPercent" type="number" min="0" max="100" class="form-control" />
                                <span asp-validation-for="UpdateDto.BatteryHealthPercent" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UpdateDto.Condition" class="form-label">Tình trạng <span class="text-danger">*</span></label>
                            <select asp-for="UpdateDto.Condition" class="form-select" required>
                                <option value="">-- Chọn tình trạng --</option>
                                <option value="new">Mới (New)</option>
                                <option value="good">Như mới (Good)</option>
                                <option value="fair">Đã sử dụng (Fair)</option>
                                <option value="poor">Cần sửa chữa (Poor)</option>
                            </select>
                            <span asp-validation-for="UpdateDto.Condition" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UpdateDto.Description" class="form-label">Mô tả <span class="text-danger">*</span></label>
                            <textarea asp-for="UpdateDto.Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="UpdateDto.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hình ảnh hiện tại</label>
                            <div class="row">
                                @if (!string.IsNullOrEmpty(Model.UpdateDto.ExistingImages))
                                {
                                    @foreach (var img in Model.UpdateDto.ExistingImages.Split(','))
                                    {
                                        <div class="col-md-3 mb-2">
                                            <img src="@img" class="img-thumbnail" alt="Product Image">
                                        </div>
                                    }
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UpdateDto.NewImageFiles" class="form-label">Thêm hình ảnh mới</label>
                            <input asp-for="UpdateDto.NewImageFiles" type="file" class="form-control" multiple accept="image/*" />
                            <small class="text-muted">Tối đa 5MB mỗi ảnh</small>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="UpdateDto.IsActive" type="checkbox" class="form-check-input" />
                            <label asp-for="UpdateDto.IsActive" class="form-check-label">Đang bán</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-circle"></i> Cập nhật
                            </button>
                            <a asp-page="/Products/MyProducts" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Validate Price > 0
            $('input[name="UpdateDto.Price"]').on('input', function() {
                var price = parseFloat($(this).val());
                if (price <= 0) {
                    $(this).addClass('is-invalid');
                    $(this).next('.text-danger').text('Giá phải lớn hơn 0');
                } else {
                    $(this).removeClass('is-invalid');
                    $(this).next('.text-danger').text('');
                }
            });

            // Validate Battery Health 0-100
            $('input[name="UpdateDto.BatteryHealthPercent"]').on('input', function() {
                var battery = parseInt($(this).val());
                if (battery < 0 || battery > 100) {
                    $(this).addClass('is-invalid');
                    $(this).next('.text-danger').text('Tình trạng pin phải từ 0-100%');
                } else {
                    $(this).removeClass('is-invalid');
                    $(this).next('.text-danger').text('');
                }
            });

            // Validate form before submit
            $('form').on('submit', function(e) {
                var price = parseFloat($('input[name="UpdateDto.Price"]').val());
                var battery = parseInt($('input[name="UpdateDto.BatteryHealthPercent"]').val());
                var condition = $('select[name="UpdateDto.Condition"]').val();

                var isValid = true;

                if (price <= 0 || isNaN(price)) {
                    alert('Giá phải lớn hơn 0');
                    isValid = false;
                }

                if (battery && (battery < 0 || battery > 100 || isNaN(battery))) {
                    alert('Tình trạng pin phải từ 0-100%');
                    isValid = false;
                }

                if (!condition) {
                    alert('Vui lòng chọn tình trạng sản phẩm');
                    isValid = false;
                }

                if (!isValid) {
                    e.preventDefault();
                    return false;
                }
            });
        });
    </script>
}
