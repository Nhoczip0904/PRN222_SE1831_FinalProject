@page
@model PRN222_FinalProject.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Đăng nhập</h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @Model.Message
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="LoginDto.Email" class="form-label">Email <span class="text-danger">*</span></label>
                            <input asp-for="LoginDto.Email" class="form-control" placeholder="example@email.com" autofocus />
                            <span asp-validation-for="LoginDto.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LoginDto.Password" class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                            <input asp-for="LoginDto.Password" type="password" class="form-control" />
                            <span asp-validation-for="LoginDto.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="LoginDto.RememberMe" type="checkbox" class="form-check-input" />
                            <label asp-for="LoginDto.RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Đăng nhập</button>
                        </div>
                    </form>

                    <hr class="my-4">
                    
                    <div class="text-center">
                        <p>Chưa có tài khoản? <a asp-page="/Account/Register">Đăng ký ngay</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
