@page
@model PRN222_FinalProject.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-person-circle" style="font-size: 80px;"></i>
                    <h5 class="mt-3">@Model.CurrentUser?.FullName</h5>
                    <p class="text-muted">@Model.CurrentUser?.Role</p>
                    <span class="badge @(Model.CurrentUser?.IsVerified == true ? "bg-success" : "bg-warning")">
                        @(Model.CurrentUser?.IsVerified == true ? "Đã xác thực" : "Chưa xác thực")
                    </span>
                </div>
            </div>

            <div class="list-group mt-3">
                <a href="#profile" class="list-group-item list-group-item-action active" data-bs-toggle="list">
                    <i class="bi bi-person"></i> Thông tin cá nhân
                </a>
                <a href="#password" class="list-group-item list-group-item-action" data-bs-toggle="list">
                    <i class="bi bi-key"></i> Đổi mật khẩu
                </a>
            </div>
        </div>

        <div class="col-md-9">
            <div class="tab-content">
                <!-- Profile Tab -->
                <div class="tab-pane fade show active" id="profile">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Cập nhật thông tin cá nhân</h5>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(Model.ProfileMessage))
                            {
                                <div class="alert @(Model.ProfileSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                                    @Model.ProfileMessage
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }

                            <form method="post" asp-page-handler="UpdateProfile">
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="text" class="form-control" value="@Model.CurrentUser?.Email" disabled />
                                    <small class="text-muted">Email không thể thay đổi</small>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="UpdateProfileDto.FullName" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                                    <input asp-for="UpdateProfileDto.FullName" class="form-control" />
                                    <span asp-validation-for="UpdateProfileDto.FullName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="UpdateProfileDto.Phone" class="form-label">Số điện thoại <span class="text-danger">*</span></label>
                                    <input asp-for="UpdateProfileDto.Phone" class="form-control" />
                                    <span asp-validation-for="UpdateProfileDto.Phone" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="UpdateProfileDto.Address" class="form-label">Địa chỉ</label>
                                    <textarea asp-for="UpdateProfileDto.Address" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="UpdateProfileDto.Address" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Ngày tạo tài khoản</label>
                                    <input type="text" class="form-control" value="@Model.CurrentUser?.CreatedAt?.ToString("dd/MM/yyyy HH:mm")" disabled />
                                </div>

                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-save"></i> Cập nhật thông tin
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Password Tab -->
                <div class="tab-pane fade" id="password">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Đổi mật khẩu</h5>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(Model.PasswordMessage))
                            {
                                <div class="alert @(Model.PasswordSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                                    @Model.PasswordMessage
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }

                            <form method="post" asp-page-handler="ChangePassword">
                                <div class="mb-3">
                                    <label asp-for="ChangePasswordDto.CurrentPassword" class="form-label">Mật khẩu hiện tại <span class="text-danger">*</span></label>
                                    <input asp-for="ChangePasswordDto.CurrentPassword" type="password" class="form-control" />
                                    <span asp-validation-for="ChangePasswordDto.CurrentPassword" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ChangePasswordDto.NewPassword" class="form-label">Mật khẩu mới <span class="text-danger">*</span></label>
                                    <input asp-for="ChangePasswordDto.NewPassword" type="password" class="form-control" />
                                    <small class="form-text text-muted">Mật khẩu phải chứa ít nhất 1 chữ hoa, 1 chữ thường và 1 số</small>
                                    <span asp-validation-for="ChangePasswordDto.NewPassword" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ChangePasswordDto.ConfirmNewPassword" class="form-label">Xác nhận mật khẩu mới <span class="text-danger">*</span></label>
                                    <input asp-for="ChangePasswordDto.ConfirmNewPassword" type="password" class="form-control" />
                                    <span asp-validation-for="ChangePasswordDto.ConfirmNewPassword" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-key"></i> Đổi mật khẩu
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
