@page "{id:int}"
@model PRN222_FinalProject.Pages.Contracts.DetailsModel
@{
    ViewData["Title"] = "Chi tiết hợp đồng";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4><i class="bi bi-file-earmark-text"></i> Chi tiết hợp đồng #@Model.Contract?.ContractNumber</h4>
                </div>
                <div class="card-body">
                    <!-- Status Badge -->
                    <div class="text-center mb-4">
                        @if (Model.Contract?.Status == "approved")
                        {
                            <span class="badge bg-success fs-5"><i class="bi bi-check-circle"></i> Đã duyệt</span>
                        }
                        else if (Model.Contract?.Status == "confirmed")
                        {
                            <span class="badge bg-info fs-5"><i class="bi bi-clock"></i> Chờ admin duyệt</span>
                        }
                        else if (Model.Contract?.Status == "rejected")
                        {
                            <span class="badge bg-danger fs-5"><i class="bi bi-x-circle"></i> Đã từ chối</span>
                        }
                        else
                        {
                            <span class="badge bg-warning fs-5"><i class="bi bi-hourglass"></i> Chờ xác nhận</span>
                        }
                    </div>

                    <!-- Contract Info -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6><strong>Thông tin hợp đồng</strong></h6>
                            <p><strong>Số hợp đồng:</strong> @Model.Contract?.ContractNumber</p>
                            <p><strong>Đơn hàng:</strong> #@Model.Contract?.OrderId</p>
                            <p><strong>Tổng giá trị:</strong> <span class="text-primary">@Model.Contract?.TotalAmount.ToString("N0") VND</span></p>
                            <p><strong>Ngày tạo:</strong> @Model.Contract?.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                        <div class="col-md-6">
                            <h6><strong>Trạng thái xác nhận</strong></h6>
                            <div class="list-group">
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between">
                                        <span><i class="bi bi-person"></i> Người mua</span>
                                        @if (Model.Contract?.BuyerConfirmed == true)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-check"></i> Đã xác nhận</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Chờ xác nhận</span>
                                        }
                                    </div>
                                    @if (Model.Contract?.BuyerConfirmedAt != null)
                                    {
                                        <small class="text-muted">@Model.Contract.BuyerConfirmedAt?.ToString("dd/MM/yyyy HH:mm")</small>
                                    }
                                </div>
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between">
                                        <span><i class="bi bi-shop"></i> Người bán</span>
                                        @if (Model.Contract?.SellerConfirmed == true)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-check"></i> Đã xác nhận</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Chờ xác nhận</span>
                                        }
                                    </div>
                                    @if (Model.Contract?.SellerConfirmedAt != null)
                                    {
                                        <small class="text-muted">@Model.Contract.SellerConfirmedAt?.ToString("dd/MM/yyyy HH:mm")</small>
                                    }
                                </div>
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between">
                                        <span><i class="bi bi-shield-check"></i> Admin</span>
                                        @if (Model.Contract?.AdminApproved == true)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-check"></i> Đã duyệt</span>
                                        }
                                        else if (Model.Contract?.Status == "rejected")
                                        {
                                            <span class="badge bg-danger">Đã từ chối</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Chờ duyệt</span>
                                        }
                                    </div>
                                    @if (Model.Contract?.AdminApprovedAt != null)
                                    {
                                        <small class="text-muted">@Model.Contract.AdminApprovedAt?.ToString("dd/MM/yyyy HH:mm")</small>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Contract?.RejectionReason))
                    {
                        <div class="alert alert-danger">
                            <strong><i class="bi bi-exclamation-triangle"></i> Lý do từ chối:</strong>
                            <p class="mb-0">@Model.Contract.RejectionReason</p>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2">
                        @if (Model.CanBuyerConfirm)
                        {
                            <form method="post" asp-page-handler="BuyerConfirm">
                                <button type="submit" class="btn btn-success btn-lg w-100">
                                    <i class="bi bi-check-circle"></i> Tôi xác nhận hợp đồng (Người mua)
                                </button>
                            </form>
                        }

                        @if (Model.CanSellerConfirm)
                        {
                            <form method="post" asp-page-handler="SellerConfirm">
                                <button type="submit" class="btn btn-success btn-lg w-100">
                                    <i class="bi bi-check-circle"></i> Tôi xác nhận hợp đồng (Người bán)
                                </button>
                            </form>
                        }

                        <a asp-page="/Orders/Contract" asp-route-orderId="@Model.Contract?.OrderId" class="btn btn-primary btn-lg" target="_blank">
                            <i class="bi bi-file-pdf"></i> Xem hợp đồng đầy đủ
                        </a>

                        <a asp-page="/Orders/Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại đơn hàng
                        </a>
                    </div>

                    <!-- Confirmation History -->
                    @if (Model.Contract?.Confirmations?.Any() == true)
                    {
                        <hr class="my-4" />
                        <h6><strong>Lịch sử xác nhận</strong></h6>
                        <div class="timeline">
                            @foreach (var conf in Model.Contract.Confirmations.OrderBy(c => c.CreatedAt))
                            {
                                <div class="timeline-item mb-3">
                                    <div class="d-flex">
                                        <div class="me-3">
                                            @if (conf.Action == "confirmed")
                                            {
                                                <i class="bi bi-check-circle-fill text-success fs-4"></i>
                                            }
                                            else if (conf.Action == "approved")
                                            {
                                                <i class="bi bi-shield-check-fill text-primary fs-4"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-x-circle-fill text-danger fs-4"></i>
                                            }
                                        </div>
                                        <div>
                                            <p class="mb-1">
                                                <strong>@conf.User?.FullName</strong>
                                                <span class="badge bg-secondary">@conf.UserRole</span>
                                                @if (conf.Action == "confirmed")
                                                {
                                                    <span>đã xác nhận hợp đồng</span>
                                                }
                                                else if (conf.Action == "approved")
                                                {
                                                    <span>đã duyệt hợp đồng</span>
                                                }
                                                else
                                                {
                                                    <span>đã từ chối hợp đồng</span>
                                                }
                                            </p>
                                            <small class="text-muted">
                                                <i class="bi bi-clock"></i> @conf.CreatedAt?.ToString("dd/MM/yyyy HH:mm:ss")
                                            </small>
                                            @if (!string.IsNullOrEmpty(conf.Note))
                                            {
                                                <p class="mt-1 mb-0"><em>@conf.Note</em></p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
