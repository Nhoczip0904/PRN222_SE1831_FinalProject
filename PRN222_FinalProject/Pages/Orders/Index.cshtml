@page
@model PRN222_FinalProject.Pages.Orders.IndexModel
@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container mt-4">
    <h2><i class="bi bi-box-seam"></i> Đơn hàng của tôi</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link @(Model.ViewType == "buyer" ? "active" : "")" asp-page="/Orders/Index" asp-route-viewType="buyer">
                <i class="bi bi-bag"></i> Đơn mua
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(Model.ViewType == "seller" ? "active" : "")" asp-page="/Orders/Index" asp-route-viewType="seller">
                <i class="bi bi-shop"></i> Đơn bán
            </a>
        </li>
    </ul>

    @if (Model.Orders != null && Model.Orders.Any())
    {
        @foreach (var order in Model.Orders)
        {
            <div class="card mb-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Đơn hàng #@order.Id</strong>
                        <span class="text-muted ms-2">@order.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</span>
                        @if (order.PaymentMethod == "auction")
                        {
                            <span class="badge bg-warning text-dark ms-2"><i class="bi bi-hammer"></i> Đấu giá</span>
                        }
                    </div>
                    <span class="badge @GetStatusBadgeClass(order.Status)">@GetStatusText(order.Status)</span>
                </div>
                <div class="card-body">
                    @if (Model.ViewType == "buyer")
                    {
                        <p class="mb-2"><i class="bi bi-shop"></i> <strong>Người bán:</strong> @order.SellerName</p>
                    }
                    else
                    {
                        <p class="mb-2"><i class="bi bi-person"></i> <strong>Người mua:</strong> @order.BuyerName</p>
                    }
                    <p class="mb-2"><i class="bi bi-geo-alt"></i> <strong>Địa chỉ:</strong> @order.ShippingAddress</p>

                    <hr>

                    <h6>Sản phẩm:</h6>
                    @foreach (var item in order.OrderItems)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span>@item.ProductName x @item.Quantity</span>
                            <strong>@item.TotalPrice.ToString("N0") VND</strong>
                        </div>
                    }

                    <hr>

                    @* Contract Status *@
                    @if (Model.OrderContracts.ContainsKey(order.Id) && Model.OrderContracts[order.Id] != null)
                    {
                        var contract = Model.OrderContracts[order.Id];
                        <div class="mb-3">
                            <strong><i class="bi bi-file-earmark-text"></i> Hợp đồng:</strong>
                            @if (contract.Status == "approved")
                            {
                                <span class="badge bg-success ms-2"><i class="bi bi-check-circle"></i> Đã duyệt</span>
                            }
                            else if (contract.Status == "confirmed")
                            {
                                <span class="badge bg-info ms-2"><i class="bi bi-clock"></i> Chờ admin duyệt</span>
                            }
                            else if (contract.Status == "rejected")
                            {
                                <span class="badge bg-danger ms-2"><i class="bi bi-x-circle"></i> Đã từ chối</span>
                            }
                            else
                            {
                                <span class="badge bg-warning ms-2"><i class="bi bi-hourglass"></i> Chờ xác nhận</span>
                            }
                            <a asp-page="/Contracts/Details" asp-route-id="@contract.Id" class="btn btn-sm btn-outline-secondary ms-2">
                                <i class="bi bi-file-text"></i> Xem hợp đồng
                            </a>
                        </div>
                    }

                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Tổng: <span class="text-primary">@order.TotalAmount.ToString("N0") VND</span></h5>
                        <div>
                            <a asp-page="/Orders/Contract" asp-route-orderId="@order.Id" class="btn btn-sm btn-outline-primary" target="_blank">
                                <i class="bi bi-file-pdf"></i> Hợp đồng PDF
                            </a>
                            @if (order.Status == "pending")
                            {
                                <form method="post" asp-page-handler="Cancel" asp-route-id="@order.Id" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Hủy đơn hàng này?')">
                                        <i class="bi bi-x-circle"></i> Hủy đơn
                                    </button>
                                </form>
                            }
                            @if (Model.ViewType == "seller" && order.Status == "confirmed")
                            {
                                @* Only allow shipping if contract is approved *@
                                @if (Model.OrderContracts.ContainsKey(order.Id) && Model.OrderContracts[order.Id]?.Status == "approved")
                                {
                                    <form method="post" asp-page-handler="UpdateStatus" asp-route-id="@order.Id" asp-route-status="shipped" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-info">
                                            <i class="bi bi-truck"></i> Bàn giao xe
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-sm btn-secondary" disabled title="Chờ hợp đồng được duyệt">
                                        <i class="bi bi-lock"></i> Chờ duyệt hợp đồng
                                    </button>
                                }
                            }
                            @if (Model.ViewType == "buyer" && order.Status == "shipped")
                            {
                                <form method="post" asp-page-handler="ConfirmDelivery" asp-route-id="@order.Id" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Xác nhận đã nhận hàng? Tiền sẽ được chuyển cho người bán.')">
                                        <i class="bi bi-check-circle"></i> Đã nhận hàng
                                    </button>
                                </form>
                            }
                            @if (order.Status == "delivered")
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> Đã hoàn thành</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav>
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-viewType="@Model.ViewType">Trước</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-route-pageNumber="@i" asp-route-viewType="@Model.ViewType">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-viewType="@Model.ViewType">Sau</a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <h4 class="mt-3">Chưa có đơn hàng nào</h4>
        </div>
    }
</div>

@functions {
    string GetStatusBadgeClass(string? status)
    {
        return status switch
        {
            "pending" => "bg-warning",
            "confirmed" => "bg-info",
            "shipped" => "bg-primary",
            "delivered" => "bg-success",
            "cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    string GetStatusText(string? status)
    {
        return status switch
        {
            "pending" => "Chờ xác nhận",
            "confirmed" => "Đã xác nhận",
            "shipped" => "Đang giao",
            "delivered" => "Đã giao",
            "cancelled" => "Đã hủy",
            _ => "Không xác định"
        };
    }
}
