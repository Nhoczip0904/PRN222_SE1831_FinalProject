@page "/Orders/UpdateAddress/{OrderId:int}"
@model PRN222_FinalProject.Pages.Orders.UpdateAddressModel
@{
    ViewData["Title"] = "Cập nhật địa chỉ giao hàng";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-geo-alt"></i> Cập nhật địa chỉ giao hàng
                    </h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                            @Model.Message
                            @if (!Model.IsSuccess)
                            {
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            }
                        </div>
                    }

                    @if (Model.IsSuccess)
                    {
                        <div class="text-center mb-3">
                            <a href="/Orders/Index" class="btn btn-primary">
                                <i class="bi bi-arrow-left"></i> Quay lại danh sách đơn hàng
                            </a>
                        </div>
                    }
                    else
                    {
                        @if (Model.Order != null)
                        {
                            <div class="mb-4">
                                <h6>Thông tin đơn hàng:</h6>
                                <div class="bg-light p-3 rounded">
                                    <p class="mb-1"><strong>Mã đơn hàng:</strong> #@Model.Order.Id</p>
                                    <p class="mb-1"><strong>Sản phẩm:</strong> @Model.Order.OrderItems.FirstOrDefault()?.ProductName</p>
                                    <p class="mb-1"><strong>Giá:</strong> @Model.Order.TotalAmount.ToString("N0") VND</p>
                                    <p class="mb-0"><strong>Trạng thái:</strong> 
                                        <span class="badge bg-info">@Model.Order.Status</span>
                                    </p>
                                </div>
                            </div>
                        }

                        <form method="post">
                            <div class="mb-3">
                                <label for="ShippingAddress" class="form-label">
                                    <i class="bi bi-geo-alt"></i> Địa chỉ giao hàng *
                                </label>
                                <textarea class="form-control" id="ShippingAddress" name="ShippingAddress" 
                                          rows="3" required>@Model.ShippingAddress</textarea>
                                <div class="form-text">
                                    Vui lòng nhập địa chỉ chi tiết để nhận hàng (số nhà, đường, phường/xã, quận/huyện, tỉnh/thành phố)
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Cập nhật địa chỉ
                                </button>
                                <a href="/Orders/Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Quay lại
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
