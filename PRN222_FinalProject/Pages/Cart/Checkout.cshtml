@page
@model PRN222_FinalProject.Pages.Cart.CheckoutModel
@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container mt-4">
    <h2><i class="bi bi-credit-card"></i> Thanh toán</h2>

    <div class="row">
        <div class="col-md-7">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Thông tin giao hàng</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Họ tên</label>
                            <input type="text" class="form-control" value="@Model.CurrentUser?.FullName" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" value="@Model.CurrentUser?.Email" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Số điện thoại</label>
                            <input type="text" class="form-control" value="@Model.CurrentUser?.Phone" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="CreateOrderDto.ShippingAddress" class="form-label">Địa chỉ giao hàng <span class="text-danger">*</span></label>
                            <textarea asp-for="CreateOrderDto.ShippingAddress" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="CreateOrderDto.ShippingAddress" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CreateOrderDto.Note" class="form-label">Ghi chú</label>
                            <textarea asp-for="CreateOrderDto.Note" class="form-control" rows="2" placeholder="Ghi chú cho người bán..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Phương thức thanh toán <span class="text-danger">*</span></label>
                            <div class="list-group">
                                <label class="list-group-item">
                                    <input class="form-check-input me-2" type="radio" name="PaymentMethod" value="wallet" checked>
                                    <i class="bi bi-wallet2"></i>
                                    <strong>Ví của tôi</strong>
                                    <span class="badge bg-info">Số dư: @Model.CurrentBalance.ToString("N0") đ</span>
                                </label>
                                <label class="list-group-item">
                                    <input class="form-check-input me-2" type="radio" name="PaymentMethod" value="vnpay">
                                    <img src="https://vnpay.vn/s1/statics.vnpay.vn/2023/6/0oxhzjmxbksr1686814746087.png" height="30" alt="VNPay">
                                    <strong>VNPay</strong>
                                    <span class="badge bg-success">Thanh toán online</span>
                                </label>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" asp-page-handler="PlaceOrder" class="btn btn-success btn-lg" id="btnPlaceOrder">
                                <i class="bi bi-check-circle"></i> Đặt hàng
                            </button>
                            <button type="submit" asp-page-handler="VNPay" class="btn btn-primary btn-lg" id="btnVNPayCheckout" style="display:none;">
                                <i class="bi bi-credit-card"></i> Thanh toán qua VNPay
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Đơn hàng của bạn</h5>
                </div>
                <div class="card-body">
                    @if (Model.CartItems != null && Model.CartItems.Any())
                    {
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="d-flex justify-content-between mb-3">
                                <div class="d-flex">
                                    <img src="@(item.Image ?? "/images/no-image.png")" alt="@item.ProductName" 
                                         style="width: 50px; height: 50px; object-fit: cover;" class="rounded me-2">
                                    <div>
                                        <h6 class="mb-0">@item.ProductName</h6>
                                        <small class="text-muted">x @item.Quantity</small>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <strong>@item.TotalPrice.ToString("N0") VND</strong>
                                </div>
                            </div>
                        }
                        <hr>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tạm tính:</span>
                            <strong>@Model.CartItems.Sum(c => c.TotalPrice).ToString("N0") VND</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Phí vận chuyển:</span>
                            <strong>Miễn phí</strong>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <h5>Tổng cộng:</h5>
                            <h5 class="text-primary">@Model.CartItems.Sum(c => c.TotalPrice).ToString("N0") VND</h5>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelectorAll('input[name="PaymentMethod"]').forEach(radio => {
            radio.addEventListener('change', function() {
                const btnVNPay = document.getElementById('btnVNPayCheckout');
                const btnPlaceOrder = document.getElementById('btnPlaceOrder');
                
                if (this.value === 'vnpay') {
                    btnVNPay.style.display = 'block';
                    btnPlaceOrder.style.display = 'none';
                } else if (this.value === 'wallet') {
                    btnVNPay.style.display = 'none';
                    btnPlaceOrder.style.display = 'block';
                }
            });
        });
    </script>
}
