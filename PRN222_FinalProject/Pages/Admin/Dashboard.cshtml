@page
@model PRN222_FinalProject.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-speedometer2"></i> Dashboard</h2>
        <span class="text-muted">Tổng quan hệ thống</span>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Tổng người dùng</h6>
                            <h3 class="mb-0">@Model.TotalUsers</h3>
                        </div>
                        <div class="text-primary">
                            <i class="bi bi-people fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Tổng đơn hàng</h6>
                            <h3 class="mb-0 text-success">@Model.TotalOrders</h3>
                        </div>
                        <div class="text-success">
                            <i class="bi bi-receipt fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Tổng doanh thu</h6>
                            <h3 class="mb-0 text-info">@Model.TotalRevenue.ToString("N0") đ</h3>
                        </div>
                        <div class="text-info">
                            <i class="bi bi-cash-stack fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning" style="background: linear-gradient(135deg, #fff8e1 0%, #ffecb3 100%);">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Phí hoa hồng (25%)</h6>
                            <h3 class="mb-0 text-warning fw-bold">@Model.TotalCommission.ToString("N0") đ</h3>
                        </div>
                        <div class="text-warning">
                            <i class="bi bi-piggy-bank fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- User Statistics Row -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Đã xác thực</h6>
                            <h3 class="mb-0 text-success">@Model.VerifiedUsers</h3>
                        </div>
                        <div class="text-success">
                            <i class="bi bi-check-circle fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Chưa xác thực</h6>
                            <h3 class="mb-0 text-warning">@Model.UnverifiedUsers</h3>
                        </div>
                        <div class="text-warning">
                            <i class="bi bi-clock fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Admin</h6>
                            <h3 class="mb-0 text-danger">@Model.AdminUsers</h3>
                        </div>
                        <div class="text-danger">
                            <i class="bi bi-shield-lock fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-lightning"></i> Thao tác nhanh</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-page="/Admin/Products/Pending" class="btn btn-outline-warning btn-lg">
                            <i class="bi bi-box-seam"></i> Duyệt sản phẩm chờ
                        </a>
                        <a asp-page="/Admin/Users/Index" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-people"></i> Quản lý người dùng
                        </a>
                        <a asp-page="/Admin/Auctions/Index" class="btn btn-outline-info btn-lg">
                            <i class="bi bi-hammer"></i> Quản lý đấu giá
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Thông tin hệ thống</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between">
                            <span><i class="bi bi-calendar"></i> Ngày hôm nay</span>
                            <strong>@DateTime.Now.ToString("dd/MM/yyyy")</strong>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span><i class="bi bi-clock"></i> Giờ hệ thống</span>
                            <strong>@DateTime.Now.ToString("HH:mm:ss")</strong>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span><i class="bi bi-person-badge"></i> Vai trò</span>
                            <strong class="badge bg-danger">Administrator</strong>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
