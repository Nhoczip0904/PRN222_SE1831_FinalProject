@page
@model PRN222_FinalProject.Pages.Admin.Revenue.IndexModel
@{
    ViewData["Title"] = "Quản lý doanh thu";
    Layout = "_AdminLayout";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-cash-stack"></i> Quản lý doanh thu</h2>
        <span class="text-muted">Tổng quan doanh thu hệ thống</span>
    </div>

    <!-- Date Range Filter -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Bộ lọc doanh thu</h5>
        </div>
        <div class="card-body">
            <form method="post" class="row g-3">
                <div class="col-md-2">
                    <label class="form-label">Từ ngày</label>
                    <input type="date" name="startDate" class="form-control" value="@Model.StartDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Đến ngày</label>
                    <input type="date" name="endDate" class="form-control" value="@Model.EndDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Theo tháng</label>
                    <input type="month" name="monthFilter" class="form-control" value="" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Danh mục</label>
                    <select name="categoryId" class="form-select">
                        <option value="">Tất cả danh mục</option>
                        @if (Model.RevenueDashboard?.CategoryRevenues != null)
                        {
                            @foreach (var category in Model.RevenueDashboard.CategoryRevenues)
                            {
                                <option value="@category.CategoryId">@category.CategoryName</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Nhóm theo</label>
                    <select name="groupBy" class="form-select">
                        <option value="day">Ngày</option>
                        <option value="week">Tuần</option>
                        <option value="month">Tháng</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <div>
                        <button type="submit" asp-page-handler="Filter" class="btn btn-primary">
                            <i class="bi bi-funnel"></i> Lọc
                        </button>
                        <a href="/Admin/Revenue/Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-clockwise"></i> Reset
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Revenue Summary Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="card border-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Tổng doanh thu</h6>
                            <h3 class="mb-0 text-info">@Model.TotalRevenue.ToString("N0") đ</h3>
                            <small class="text-muted">Từ @Model.StartDate?.ToString("dd/MM/yyyy") - @Model.EndDate?.ToString("dd/MM/yyyy")</small>
                        </div>
                        <div class="text-info">
                            <i class="bi bi-cash-stack fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-warning" style="background: linear-gradient(135deg, #fff8e1 0%, #ffecb3 100%);">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Phí hoa hồng (25%)</h6>
                            <h3 class="mb-0 text-warning fw-bold">@Model.TotalCommission.ToString("N0") đ</h3>
                            <small class="text-muted">@((Model.TotalRevenue > 0 ? Model.TotalCommission / Model.TotalRevenue * 100 : 0).ToString("N1"))%</small>
                        </div>
                        <div class="text-warning">
                            <i class="bi bi-piggy-bank fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Revenue Charts and Tables -->
    <div class="row g-3 mb-4">
        <!-- Daily Revenue Chart -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-graph-up"></i> Biểu đồ doanh thu</h5>
                </div>
                <div class="card-body">
                    <canvas id="revenueChart" height="100"></canvas>
                </div>
            </div>
        </div>
        
        <!-- Category Revenue -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-pie-chart"></i> Doanh thu theo danh mục</h5>
                </div>
                <div class="card-body">
                    <canvas id="categoryChart" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    
    <!-- Category Revenue Table -->
    <div class="row g-3 mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-table"></i> Chi tiết doanh thu theo danh mục</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Danh mục</th>
                                    <th class="text-end">Số đơn hàng</th>
                                    <th class="text-end">Doanh thu</th>
                                    <th class="text-end">Hoa hồng (25%)</th>
                                    <th class="text-end">Tỷ lệ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model.RevenueDashboard.CategoryRevenues)
                                {
                                    var percentage = Model.TotalRevenue > 0 ? category.Revenue / Model.TotalRevenue * 100 : 0;
                                    <tr>
                                        <td>
                                            <span class="badge bg-info">@category.CategoryName</span>
                                        </td>
                                        <td class="text-end">@category.OrderCount</td>
                                        <td class="text-end fw-bold text-success">@category.Revenue.ToString("N0") đ</td>
                                        <td class="text-end text-warning">@category.Commission.ToString("N0") đ</td>
                                        <td class="text-end">
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar bg-primary" role="progressbar" 
                                                     style="width: @percentage.ToString("F1")%"
                                                     aria-valuenow="@percentage.ToString("F1")" aria-valuemin="0" aria-valuemax="100">
                                                    @percentage.ToString("F1")%
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Products and Sellers -->
    <div class="row g-3 mb-4">
        <!-- Top Products -->
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-star"></i> Top sản phẩm bán chạy</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th class="text-end">Số lượng</th>
                                    <th class="text-end">Doanh thu</th>
                                    <th class="text-end">Hoa hồng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.RevenueDashboard.TopProducts.Take(5))
                                {
                                    <tr>
                                        <td class="text-truncate" style="max-width: 200px;">@product.ProductName</td>
                                        <td class="text-end">@product.QuantitySold</td>
                                        <td class="text-end">@product.Revenue.ToString("N0") đ</td>
                                        <td class="text-end text-warning">@product.Commission.ToString("N0") đ</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Top Sellers -->
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-trophy"></i> Top người bán</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Người bán</th>
                                    <th class="text-end">Số đơn</th>
                                    <th class="text-end">Doanh thu</th>
                                    <th class="text-end">Hoa hồng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var seller in Model.RevenueDashboard.TopSellers.Take(5))
                                {
                                    <tr>
                                        <td>@seller.SellerName</td>
                                        <td class="text-end">@seller.OrderCount</td>
                                        <td class="text-end">@seller.Revenue.ToString("N0") đ</td>
                                        <td class="text-end text-warning">@seller.Commission.ToString("N0") đ</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Revenue Chart
    const revenueCtx = document.getElementById('revenueChart').getContext('2d');
    const dailyRevenues = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.RevenueDashboard.DailyRevenues));
    
    console.log('Daily revenues data:', dailyRevenues); // Debug log
    
    new Chart(revenueCtx, {
        type: 'line',
        data: {
            labels: dailyRevenues.map(d => new Date(d.Date).toLocaleDateString('vi-VN')),
            datasets: [{
                label: 'Doanh thu',
                data: dailyRevenues.map(d => d.Revenue),
                borderColor: 'rgb(75, 192, 192)',
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                tension: 0.1
            }, {
                label: 'Hoa hồng',
                data: dailyRevenues.map(d => d.Commission),
                borderColor: 'rgb(255, 159, 64)',
                backgroundColor: 'rgba(255, 159, 64, 0.2)',
                tension: 0.1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        callback: function(value) {
                            return value.toLocaleString('vi-VN') + ' đ';
                        }
                    }
                }
            },
            plugins: {
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return context.dataset.label + ': ' + context.parsed.y.toLocaleString('vi-VN') + ' đ';
                        }
                    }
                }
            }
        }
    });

    // Category Chart
    const categoryCtx = document.getElementById('categoryChart').getContext('2d');
    const categoryRevenues = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.RevenueDashboard.CategoryRevenues));
    
    console.log('Category revenues data:', categoryRevenues); // Debug log
    
    new Chart(categoryCtx, {
        type: 'doughnut',
        data: {
            labels: categoryRevenues.map(c => c.CategoryName),
            datasets: [{
                data: categoryRevenues.map(c => c.Revenue),
                backgroundColor: [
                    '#FF6384',
                    '#36A2EB',
                    '#FFCE56',
                    '#4BC0C0',
                    '#9966FF',
                    '#FF9F40'
                ]
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom'
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return context.label + ': ' + context.parsed.toLocaleString('vi-VN') + ' đ';
                        }
                    }
                }
            }
        }
    });
</script>
