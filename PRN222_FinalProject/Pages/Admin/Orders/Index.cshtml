@page
@model PRN222_FinalProject.Pages.Admin.Orders.IndexModel
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-box-seam"></i> Quản lý đơn hàng</h2>
    </div>

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Trạng thái</label>
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">Tất cả</option>
                        <option value="pending" selected="@(Model.StatusFilter == "pending")">Chờ xử lý</option>
                        <option value="confirmed" selected="@(Model.StatusFilter == "confirmed")">Đã xác nhận</option>
                        <option value="shipped" selected="@(Model.StatusFilter == "shipped")">Đang giao</option>
                        <option value="delivered" selected="@(Model.StatusFilter == "delivered")">Đã giao</option>
                        <option value="cancelled" selected="@(Model.StatusFilter == "cancelled")">Đã hủy</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Tìm kiếm</label>
                    <input type="text" name="keyword" value="@Model.Keyword" class="form-control" placeholder="Mã đơn, tên người mua...">
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Tìm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="text-warning">Chờ xử lý</h5>
                    <h3>@Model.PendingCount</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="text-info">Đang giao</h5>
                    <h3>@Model.ShippedCount</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="text-success">Hoàn thành</h5>
                    <h3>@Model.DeliveredCount</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="text-danger">Đã hủy</h5>
                    <h3>@Model.CancelledCount</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="card">
        <div class="card-body">
            @if (Model.Orders.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Mã ĐH</th>
                                <th>Người mua</th>
                                <th>Người bán</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th>Ngày tạo</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders)
                            {
                                <tr>
                                    <td><strong>#@order.Id</strong></td>
                                    <td>@order.BuyerName</td>
                                    <td>@order.SellerName</td>
                                    <td><strong class="text-primary">@order.TotalAmount.ToString("N0") đ</strong></td>
                                    <td>
                                        @switch (order.Status)
                                        {
                                            case "pending":
                                                <span class="badge bg-warning">Chờ xử lý</span>
                                                break;
                                            case "confirmed":
                                                <span class="badge bg-info">Đã xác nhận</span>
                                                break;
                                            case "shipped":
                                                <span class="badge bg-primary">Đang giao</span>
                                                break;
                                            case "delivered":
                                                <span class="badge bg-success">Đã giao</span>
                                                break;
                                            case "cancelled":
                                                <span class="badge bg-danger">Đã hủy</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@order.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>@order.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <a asp-page="./Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i> Chi tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav class="mt-3">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                <a class="page-link" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-status="@Model.StatusFilter" asp-route-keyword="@Model.Keyword">Trước</a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" asp-route-pageNumber="@i" asp-route-status="@Model.StatusFilter" asp-route-keyword="@Model.Keyword">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-status="@Model.StatusFilter" asp-route-keyword="@Model.Keyword">Sau</a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-inbox"></i> Không có đơn hàng nào
                </div>
            }
        </div>
    </div>
</div>
