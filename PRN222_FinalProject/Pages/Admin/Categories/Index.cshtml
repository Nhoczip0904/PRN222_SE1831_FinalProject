@page
@model PRN222_FinalProject.Pages.Admin.Categories.IndexModel
@{
    ViewData["Title"] = "Quản lý danh mục";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-tags"></i> Quản lý danh mục</h2>
        <a asp-page="./Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Thêm danh mục mới
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-@(Model.Success ? "success" : "danger") alert-dismissible fade show">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (Model.Categories.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên danh mục</th>
                                <th>Mô tả</th>
                                <th>Số sản phẩm</th>
                                <th>Ngày tạo</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model.Categories)
                            {
                                <tr>
                                    <td><strong>@category.Id</strong></td>
                                    <td><strong>@category.Name</strong></td>
                                    <td>@(string.IsNullOrEmpty(category.Description) ? "-" : category.Description)</td>
                                    <td>
                                        <span class="badge bg-info">@category.ProductCount sản phẩm</span>
                                    </td>
                                    <td>@DateTime.Now.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a asp-page="./Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i> Sửa
                                        </a>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@category.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger" 
                                                    onclick="return confirm('Bạn có chắc muốn xóa danh mục này? Các sản phẩm trong danh mục sẽ không có danh mục.')"
                                                    @(category.ProductCount > 0 ? "disabled title='Không thể xóa danh mục có sản phẩm'" : "")>
                                                <i class="bi bi-trash"></i> Xóa
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-inbox"></i> Chưa có danh mục nào. 
                    <a asp-page="./Create" class="alert-link">Thêm danh mục đầu tiên</a>
                </div>
            }
        </div>
    </div>
</div>
