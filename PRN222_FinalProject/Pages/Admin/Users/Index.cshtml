@page
@model PRN222_FinalProject.Pages.Admin.Users.IndexModel
@using BLL.DTOs
@using BLL.Helpers
@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "_AdminLayout";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people"></i> Quản lý người dùng</h2>
        <a asp-page="/Admin/Users/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Thêm người dùng
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-10">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Tìm kiếm theo email, tên, số điện thoại..." value="@Model.SearchTerm" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Tìm kiếm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                            <th>Họ tên</th>
                            <th>Số điện thoại</th>
                            <th>Vai trò</th>
                            <th>Trạng thái</th>
                            <th>Ngày tạo</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Users != null && Model.Users.Any())
                        {
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td>@user.Email</td>
                                    <td>@user.FullName</td>
                                    <td>@user.Phone</td>
                                    <td>
                                        <span class="badge @(user.Role == "admin" ? "bg-danger" : user.Role == "staff" ? "bg-warning" : "bg-primary")">
                                            @(user.Role == "staff" ? "Staff" : user.Role)
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @(user.IsVerified == true ? "bg-success" : "bg-warning")">
                                            @(user.IsVerified == true ? "Hoạt động" : "Tạm ngưng")
                                        </span>
                                    </td>
                                    <td>@user.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @{
                                            var currentUser = ViewContext.HttpContext.Session.GetObjectFromJson<BLL.DTOs.UserDto>("CurrentUser");
                                            var isAdmin = currentUser?.Role == "admin";
                                        }
                                        <div class="btn-group" role="group">
                                            <a asp-page="/Admin/Users/Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            
                                            @if (user.IsVerified == true && user.Role != "admin" && (isAdmin || user.Role != "staff"))
                                            {
                                                <form method="post" asp-page-handler="Suspend" asp-route-id="@user.Id" style="display:inline;">
                                                    <button type="submit" class="btn btn-sm btn-outline-warning" title="Tạm ngưng" onclick="return confirm('Bạn có chắc muốn tạm ngưng tài khoản này?')">
                                                        <i class="bi bi-pause-circle"></i>
                                                    </button>
                                                </form>
                                            }
                                            else if (user.IsVerified == false && user.Role != "admin" && (isAdmin || user.Role != "staff"))
                                            {
                                                <form method="post" asp-page-handler="Activate" asp-route-id="@user.Id" style="display:inline;">
                                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Kích hoạt">
                                                        <i class="bi bi-play-circle"></i>
                                                    </button>
                                                </form>
                                            }
                                            
                                            @if (user.Role != "admin" && (isAdmin || user.Role != "staff"))
                                            {
                                                <form method="post" asp-page-handler="Delete" asp-route-id="@user.Id" style="display:inline;">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa" onclick="return confirm('Bạn có chắc muốn xóa người dùng này?')">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">Không tìm thấy người dùng nào</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-page="/Admin/Users/Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-searchTerm="@Model.SearchTerm">Trước</a>
                        </li>

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-page="/Admin/Users/Index" asp-route-page="@i" asp-route-searchTerm="@Model.SearchTerm">@i</a>
                            </li>
                        }

                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-page="/Admin/Users/Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-searchTerm="@Model.SearchTerm">Sau</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>
