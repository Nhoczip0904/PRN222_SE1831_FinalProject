@page
@model PRN222_FinalProject.Pages.Auctions.MyAuctionsModel
@{
    ViewData["Title"] = "Đấu giá của tôi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-hammer"></i> Đấu giá của tôi</h2>
        <a asp-page="/Auctions/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Tạo đấu giá mới
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Auctions != null && Model.Auctions.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Giá khởi điểm</th>
                        <th>Giá hiện tại</th>
                        <th>Số lượt đặt giá</th>
                        <th>Thời gian kết thúc</th>
                        <th>Trạng thái</th>
                        <th>Người thắng</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var auction in Model.Auctions)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@(auction.ProductImage ?? "/images/no-image.png")" alt="@auction.ProductName" 
                                         style="width: 60px; height: 60px; object-fit: cover;" class="rounded me-2">
                                    <div>
                                        <strong>@auction.ProductName</strong>
                                    </div>
                                </div>
                            </td>
                            <td>@auction.StartingPrice.ToString("N0") VND</td>
                            <td><strong class="text-primary">@(auction.CurrentPrice?.ToString("N0") ?? auction.StartingPrice.ToString("N0")) VND</strong></td>
                            <td>
                                <span class="badge bg-info">@auction.TotalBids</span>
                            </td>
                            <td>@auction.EndTime.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (auction.Status == "closed")
                                {
                                    <span class="badge bg-success">Đã chốt</span>
                                }
                                else if (auction.Status == "cancelled")
                                {
                                    <span class="badge bg-danger">Đã hủy</span>
                                }
                                else if (auction.IsExpired)
                                {
                                    <span class="badge bg-warning">Hết hạn</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary">Đang hoạt động</span>
                                }
                            </td>
                            <td>
                                @if (auction.WinnerName != null)
                                {
                                    <i class="bi bi-trophy text-success"></i>
                                    <span>@auction.WinnerName</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <a asp-page="/Auctions/Details" asp-route-id="@auction.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> Xem
                                </a>
                                @if (auction.Status == "active" && auction.TotalBids > 0)
                                {
                                    <a asp-page="/Auctions/SelectWinner" asp-route-auctionId="@auction.Id" class="btn btn-sm btn-success">
                                        <i class="bi bi-trophy"></i> Đóng đấu giá
                                    </a>
                                }
                                @if (auction.Status == "active" && auction.StartTime > DateTime.Now)
                                {
                                    <form method="post" asp-page-handler="Cancel" asp-route-auctionId="@auction.Id" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger" 
                                                onclick="return confirm('Bạn có chắc muốn hủy đấu giá này?')">
                                            <i class="bi bi-x-circle"></i> Hủy
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <h4 class="mt-3">Bạn chưa có đấu giá nào</h4>
            <a asp-page="/Auctions/Create" class="btn btn-primary mt-2">
                <i class="bi bi-plus-circle"></i> Tạo đấu giá đầu tiên
            </a>
        </div>
    }
</div>
