@page
@model PRN222_FinalProject.Pages.Auctions.IndexModel
@{
    ViewData["Title"] = "Đấu giá";
}

<div class="container mt-4">
    <h2><i class="bi bi-hammer"></i> Đấu giá sản phẩm</h2>

    @if (Model.Auctions != null && Model.Auctions.Any())
    {
        <div class="row">
            @foreach (var auction in Model.Auctions)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 @(auction.IsExpired ? "border-secondary" : "border-primary")">
                        <img src="@(auction.ProductImage ?? "/images/no-image.png")" class="card-img-top" alt="@auction.ProductName" style="height: 200px; object-fit: cover;">
                        
                        @if (auction.Status == "closed")
                        {
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-success">Đã chốt</span>
                            </div>
                        }
                        else if (auction.IsExpired)
                        {
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-secondary">Hết hạn</span>
                            </div>
                        }
                        else
                        {
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-danger">Đang đấu giá</span>
                            </div>
                        }

                        <div class="card-body">
                            <h5 class="card-title">@auction.ProductName</h5>
                            <p class="text-muted mb-2"><i class="bi bi-person"></i> @auction.SellerName</p>
                            
                            <div class="mb-2">
                                <small class="text-muted">Giá khởi điểm:</small>
                                <p class="mb-1"><strong>@auction.StartingPrice.ToString("N0") VND</strong></p>
                            </div>

                            <div class="mb-2">
                                <small class="text-muted">Giá hiện tại:</small>
                                <h4 class="text-primary mb-1">@(auction.CurrentPrice?.ToString("N0") ?? auction.StartingPrice.ToString("N0")) VND</h4>
                            </div>

                            <div class="mb-2">
                                <small class="text-muted"><i class="bi bi-people"></i> Số lượt đặt giá:</small>
                                <strong>@auction.TotalBids</strong>
                            </div>

                            @if (!auction.IsExpired && auction.Status == "active")
                            {
                                <div class="alert alert-warning py-2 mb-2">
                                    <i class="bi bi-clock"></i> 
                                    <small>
                                        Còn: 
                                        @if (auction.TimeRemaining.Days > 0)
                                        {
                                            <strong>@auction.TimeRemaining.Days ngày @auction.TimeRemaining.Hours giờ</strong>
                                        }
                                        else if (auction.TimeRemaining.Hours > 0)
                                        {
                                            <strong>@auction.TimeRemaining.Hours giờ @auction.TimeRemaining.Minutes phút</strong>
                                        }
                                        else
                                        {
                                            <strong>@auction.TimeRemaining.Minutes phút</strong>
                                        }
                                    </small>
                                </div>
                            }
                            else if (auction.Status == "closed" && auction.WinnerName != null)
                            {
                                <div class="alert alert-success py-2 mb-2">
                                    <i class="bi bi-trophy"></i> <small>Người thắng: <strong>@auction.WinnerName</strong></small>
                                </div>
                            }
                        </div>

                        <div class="card-footer bg-white">
                            <div class="d-grid">
                                <a asp-page="/Auctions/Details" asp-route-id="@auction.Id" class="btn btn-primary">
                                    <i class="bi bi-eye"></i> Xem chi tiết & Đặt giá
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav>
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link" asp-route-pageNumber="@(Model.PageNumber - 1)">Trước</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-route-pageNumber="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-route-pageNumber="@(Model.PageNumber + 1)">Sau</a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <h4 class="mt-3">Chưa có đấu giá nào</h4>
        </div>
    }
</div>
